<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_profile" tools:context="com.example.anna.ketoapp2.Profile">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Username:"
                android:id="@+id/username_title"
                android:layout_below="@id/toolbar"
                android:layout_marginBottom="20dp"
                />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="anna"
                android:id="@+id/username_text"
                android:layout_below="@id/toolbar"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/username_title"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Insulin Regiment:"
                android:id="@+id/insulin_title"
                android:layout_below="@id/username_title"
                android:layout_marginBottom="20dp" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="solovjova"
                android:id="@+id/insulin_text"
                android:layout_below="@id/username_title"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/insulin_title"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Date of Birth:"
                android:id="@+id/age_title"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/insulin_title"
                />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="19"
                android:id="@+id/age_text"
                android:layout_below="@id/insulin_title"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/age_title"/>

        </RelativeLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@color/white"
            android:background="@color/colorButtons"
            android:id="@+id/profile_del_button"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@color/white"
            android:background="@color/colorButtons"
            android:id="@+id/profile_button"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_above="@id/profile_del_button"
            />




</RelativeLayout>
