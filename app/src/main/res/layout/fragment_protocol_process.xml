<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.anna.ketoapp.ProtocolProcess">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/part1"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Are you unwell?"
                android:id="@+id/unwell_text"
                android:layout_below="@id/toolbar"
                android:textAlignment="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/unwell_yes"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/unwell_no"
                    android:textAlignment="center"
                    android:layout_toRightOf="@id/unwell_yes"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/part2"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:visibility="invisible"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/dander_signs_text">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Do you have any of danger symptoms?"
            android:textAlignment="center"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Persistent vimiting"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"></TextView>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Heavy and rapid breathing"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"></TextView>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Abdominal pain"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"></TextView>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Moderate or severe dehydration"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"></TextView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/danger_signs_button_yes"
                    android:textAlignment="center"
                    android:layout_below="@id/dander_signs_text"
                    android:onClick="ProtocolProcessListener"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/danger_signs_button_no"
                    android:textAlignment="center"
                    android:layout_toRightOf="@id/danger_signs_button_yes"
                    android:layout_below="@id/dander_signs_text"
                    android:onClick="ProtocolProcessListener"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/part3"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="What is your blood glucose?"
            android:id="@+id/glucose_input_text"
            android:textAlignment="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/glucose_input_edit"
            android:inputType="number"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/username_edit_title"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_edit_title"
            android:layout_margin="5dp">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/glucose_next"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="5dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/part4"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Is that a second pre-meal result greater than 17?"
            android:id="@+id/premeal_text"
            android:layout_below="@id/toolbar"
            android:textAlignment="center"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/premeal_yes"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/premeal_no"
                    android:textAlignment="center"
                    android:layout_toRightOf="@id/premeal_yes"
                    />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/part5"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Check your blood ketones. Are they more tham 1mmol/L?"
            android:id="@+id/ketones_text"
            android:layout_below="@id/toolbar"
            android:textAlignment="center"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/ketones_yes"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/ketones_no"
                    android:textAlignment="center"
                    android:layout_toRightOf="@id/ketones_yes"
                    />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/part6"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Please check your blood glucose again before meal in 4 hours"
            android:id="@+id/remeasure_advise"
            android:layout_below="@id/toolbar"
            android:textAlignment="center"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Again"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/start_again1"
                    android:textAlignment="center"


                    />
            </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/part7"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="You might have established ketoacidosis. Urgent hospital assessment needed."
            android:id="@+id/danger_advise"
            android:layout_below="@id/toolbar"
            android:textAlignment="center"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Emergency contacts"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/emergency_contact"
                    android:textAlignment="center" android:layout_marginRight="5dp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Start Again"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/start_again2"
                    android:textAlignment="center"
                    android:layout_toRightOf="@id/emergency_contact"
                    />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/part8"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="What is your total daily dose of insulin? [TDD]"
            android:id="@+id/insulin_text"
            android:layout_below="@id/toolbar"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:singleLine="true"
            android:id="@+id/insulin_input_edit"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/insulin_text"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/insulin_next"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/part9"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Take 10 units of fast-acting insulin."
            android:id="@+id/dosage_text"
            android:layout_below="@id/toolbar"
            android:textAlignment="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@color/white"
            android:background="@color/colorButtons"
            android:id="@+id/dosage_next"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/part10"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Do you want application to remind you to check again your blood glucose and ketones in 4 hours?."
            android:id="@+id/reminder_text"
            android:layout_below="@id/toolbar"
            android:textAlignment="center"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/reminder_yes"
                    android:textAlignment="center"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/reminder_no"
                    android:textAlignment="center"
                    android:layout_toRightOf="@id/reminder_yes"
                    />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/part11"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        >
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Check your blood glucose at least 4 times a day and your ketones at least 2 times a day until the things are settled."
            android:id="@+id/measure_advice_text"
            android:layout_below="@id/toolbar"
            android:textAlignment="center"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="If ketones are more than 3mmol/L recheck your lood glucose and ketones every 2 hours;"
            android:id="@+id/measure_advice_text2"
            android:layout_below="@id/measure_advice_text"
            android:textAlignment="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Again"
                    android:textColor="@color/white"
                    android:background="@color/colorButtons"
                    android:id="@+id/start_again3"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"/>
                </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>


